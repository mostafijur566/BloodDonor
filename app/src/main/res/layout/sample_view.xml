<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/sampleName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name: Mostafijur Rahman"
        android:layout_margin="5dp"
        android:textSize="25sp"
        android:textColor="#000"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/sampleNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone: 01757261840"
        android:layout_margin="5dp"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/sampleAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address: Chittagong"
        android:layout_margin="5dp"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/sampleBlood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Blood Group: B-"
        android:layout_margin="5dp"
        android:textSize="20dp"
        />

</LinearLayout>